<%= render 'shared/errors' , obj:@student %>

<div class="container">
  <div class="row center sign_up_form">
    <div class="col s12 m12 l12">
      <div class="card-panel" style="margin-top:25px">
        <h3 class="header"><%=@student.new_record? ? "Sign Up Form" : "Edit your profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: {class: "col s12"}) do |f| %>

            <div class="row">
              <div class=" col s12">
                <%= f.text_field :name, placeholder: "Enter full name.", autofocus: true %>
                <%= f.label :name %>
              </div>
            </div>

            <div class="row">
              <div class=" col s12">
                <%= f.text_field :email, placeholder: "Enter email address."  %>
                <%= f.label :email %>
              </div>
            </div>

            <div class="row">
              <div class=" col s12">
                <%= f.password_field :password, placeholder: "Enter your password."  %>
                <%= f.label :password %>
              </div>
            </div>

            <div class="row">
              <div class=" col s12">
                <%= f.password_field :password_confirmation, placeholder: "Connfirm your password."  %>
                <%= f.label :password_confirmation %>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s12">
                <%= f.submit(@student.new_record? ? "SignUp" : "Submit Changes", class:"btn waves-effect waves-light") %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>